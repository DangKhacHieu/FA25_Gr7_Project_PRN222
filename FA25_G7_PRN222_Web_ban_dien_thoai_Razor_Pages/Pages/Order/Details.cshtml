@page "{id:int}"
@model FA25_G7_PRN222_Web_ban_dien_thoai_Razor_Pages.Pages.Order.DetailsModel
@{
    if (Model.OrderDetails != null)
    {
        ViewData["Title"] = "Chi tiết đơn hàng #" + Model.OrderDetails.OrderID;
    }
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}


@if (Model.OrderDetails != null)
{
    <div class="row">
        <div class="col-12">
            <a asp-page="/Order/History" class="btn btn-outline-secondary mb-3">
                &larr; Quay lại lịch sử
            </a>
            <h1 class="display-6">Chi tiết đơn hàng #@Model.OrderDetails.OrderID</h1>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h4>Thông tin nhận hàng</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <strong>Ngày đặt:</strong> @Model.OrderDetails.Date.Value.ToString("dd/MM/yyyy HH:mm")
                </div>
                <div class="col-md-6">
                    <strong>Trạng thái:</strong>
                    <span class="badge bg-success fs-6">@(Model.OrderDetails.Status ?? "N/A")</span>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-6">
                    <strong>Số điện thoại:</strong> @Model.OrderDetails.PhoneNumber
                </div>
                <div class="col-md-6">
                    <strong>Địa chỉ giao hàng:</strong> @Model.OrderDetails.Address
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h4>Danh sách sản phẩm</h4>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width: 50%;">Sản phẩm</th>
                        <th class="text-center" style="width: 15%;">Số lượng</th>
                        <th class="text-end" style="width: 15%;">Đơn giá</th>
                        <th class="text-end" style="width: 20%;">Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        bool isOrderCompleted = (Model.OrderDetails.Status != null && Model.OrderDetails.Status.Contains("Completed"));
                    }

                    @foreach (var item in Model.OrderDetails.Order_Details)
                    {
                        // Logic kiểm tra đã review (từ PageModel)
                        bool hasAlreadyReviewed = Model.AlreadyFeedbackProducts.Contains(item.ProductID);

                        <tr>
                            <td>
                                <strong>@item.Product?.ProductName</strong>
                                <br />

                                @if (isOrderCompleted)
                                {
                                    @if (hasAlreadyReviewed)
                                    {
                                        <span class="text-success">✅ Đã đánh giá</span>
                                    }
                                    else
                                    {
                                        <form method="post" asp-page-handler="AddFeedback" class="mt-2">
                                            <input type="hidden" name="ProductId" value="@item.ProductID" />
                                            <input type="hidden" name="OrderId" value="@Model.OrderDetails.OrderID" />
                                            <div class="input-group">
                                                <input type="number" class="form-control" name="RatePoint" min="1" max="5" placeholder="⭐" required />
                                                <input type="text" class="form-control" name="Content" placeholder="Viết nhận xét..." required />
                                                <button type="submit" class="btn btn-outline-primary">Gửi</button>
                                            </div>
                                        </form>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted fst-italic">Hoàn thành đơn hàng để đánh giá</span>
                                }
                            </td>
                            <td class="text-center">@item.Quantity</td>
                            <td class="text-end">@((item.Product?.Price ?? 0).ToString("N0")) đ</td>
                            <td class="text-end fw-bold">@((item.Quantity ?? 0) * (item.Product?.Price ?? 0)).ToString("N0") đ</td>
                        </tr>
                    }
                </tbody>


                <tfoot class="table-light">
                    <tr class="border-top">
                        <td colspan="3" class="text-end h5">TỔNG CỘNG</td>
                        <td class="text-end text-danger h4">
                            @((Model.OrderDetails.Total ?? 0).ToString("N0")) đ
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning" role="alert">
        Không tìm thấy thông tin đơn hàng.
        <a asp-page="/Order/History" class="alert-link">Quay lại lịch sử</a>.
    </div>
}