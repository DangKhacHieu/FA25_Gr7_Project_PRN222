@page
@model FA25_G7_PRN222_Web_ban_dien_thoai_Razor_Pages.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Login.css" />
}

<main class="login-container">

    <h2 class="text-center mb-4">Login</h2>

    <!-- ✅ Hiển thị thông báo động -->
    @if (!string.IsNullOrEmpty(Model.Message))
    {
        var isError = Model.Message.Contains("Invalid")
        || Model.Message.Contains("locked")
        || Model.Message.Contains("Please")
        || Model.Message.Contains("error", StringComparison.OrdinalIgnoreCase);
        <div class="alert @(isError ? "alert-danger" : "alert-success") text-center" style="width: 100%; margin-bottom: 15px;">
            @Model.Message
        </div>
    }

    <form method="post">
        <div class="form-group mb-3">
            <label for="Username">Username</label>
            <input asp-for="Username" class="form-control" placeholder="Enter your username" />
        </div>

        <div class="form-group mb-3">
            <label for="Password">Password</label>
            <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
        </div>

        <button type="submit" class="btn btn-primary w-100 mb-3">Login</button>

        <!-- ✅ Link điều hướng -->
        <div class="text-center">
            <a asp-page="/ForgotPassword/ForgotPassword" class="text-decoration-none">Forgot Password?</a>
            <span class="mx-2 text-muted">|</span>
            <a asp-page="/Register" class="text-decoration-none">Create an Account</a>
        </div>
    </form>

</main>
