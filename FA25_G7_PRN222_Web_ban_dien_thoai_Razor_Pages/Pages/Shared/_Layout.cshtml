<!DOCTYPE html>
<html lang="en">
     @RenderSection("Styles", required: false)
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FA25_G7_PRN222_Web_ban_dien_thoai_Razor_Pages</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FA25_G7_PRN222_Web_ban_dien_thoai_Razor_Pages.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

</head>
<body>
    <header class="shadow-sm" style="background-color: #FFD400;">
        <div class="container py-2 d-flex justify-content-between align-items-center">
            <a class="fw-bold text-dark fs-5 text-decoration-none" asp-page="/Home/Index">📱 PhoneStore</a>

            <form class="d-flex w-50" method="get" asp-page="/Products/Search">
                <input class="form-control" name="q" placeholder="Tìm kiếm sản phẩm..." />
                <button class="btn btn-dark ms-2">🔍</button>
            </form>

            <div class="d-flex align-items-center">
                @if (User?.Identity?.IsAuthenticated ?? false)
                {
                    <a asp-page="/Account/Profile" class="text-dark text-decoration-none me-3">👤 @User.Identity.Name</a>
                }
                else
                {
                    <a asp-page="/Account/Login" class="btn btn-outline-dark btn-sm me-2">Đăng nhập</a>
                }
                <a asp-page="/Carts/Index" class="position-relative text-dark text-decoration-none fs-5">
                    🛒
                    @if (TempData["CartCount"] != null)
                    {
                        <span class="position-absolute top-0 start-100 translate-middle badge bg-danger rounded-pill">
                            @TempData["CartCount"]
                        </span>
                    }
                </a>
            </div>
        </div>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - FA25_G7_PRN222_Web_ban_dien_thoai_Razor_Pages - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
