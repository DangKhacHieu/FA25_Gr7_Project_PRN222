@page
@model FA25_G7_PRN222_Web_ban_dien_thoai_Razor_Pages.Pages.ChangePassWordModel

@{
    ViewData["Title"] = "Đổi Mật Khẩu";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Đổi Mật Khẩu</h4>
                </div>
                <div class="card-body">

                    @* Hiển thị thông báo (StatusMessage) *@
                    @if (!string.IsNullOrEmpty(Model.StatusMessage))
                    {
                        <div class="alert alert-success">@Model.StatusMessage</div>
                    }
                    @* Hiển thị lỗi Validation Summary & Lỗi Service *@
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <form method="post">

                        <h5 class="mt-2">Xác minh</h5>
                        <div class="form-group mb-3">
                            <label asp-for="Input.OldPassword"></label>
                            <input asp-for="Input.OldPassword" class="form-control" />
                            <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                        </div>

                        <hr />
                        <h5 class="mt-4">Mật khẩu mới</h5>

                        <div class="form-group mb-3">
                            <label asp-for="Input.NewPassword"></label>
                            <input asp-for="Input.NewPassword" class="form-control" />
                            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Input.ConfirmPassword"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <p class="text-muted small">
                            Yêu cầu mật khẩu: Tối thiểu 8 ký tự, bao gồm chữ hoa, chữ thường, số và ký tự đặc biệt.
                        </p>

                        <button type="submit" class="btn btn-primary w-100">Cập nhật Mật khẩu</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}