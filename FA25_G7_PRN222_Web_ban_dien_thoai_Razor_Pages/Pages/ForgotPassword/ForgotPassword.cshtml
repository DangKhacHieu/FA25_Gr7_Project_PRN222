@page
@model FA25_G7_PRN222_Web_ban_dien_thoai_Razor_Pages.Pages.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 400px; border-radius: 20px;">
        <h3 class="text-center mb-4 fw-bold text-primary">Forgot Password</h3>

        <form method="post">
            <div class="mb-3">
                <label class="form-label">Registered Email</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" required />
            </div>

            <button type="submit" class="btn btn-primary w-100 rounded-pill py-2">Send OTP</button>

            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <div class="alert alert-info mt-3 text-center">@Model.Message</div>
            }
        </form>

        <div class="text-center mt-3">
            <a asp-page="/Login" class="text-decoration-none">← Back to Login</a>
        </div>
    </div>
</div>
