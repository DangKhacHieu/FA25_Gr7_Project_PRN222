@page
@model FA25_G7_PRN222_Web_ban_dien_thoai_Razor_Pages.Pages.VerifyOTPModel
@{
    ViewData["Title"] = "Verify OTP";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 400px; border-radius: 20px;">
        <h3 class="text-center mb-4 fw-bold text-success">Verify OTP</h3>

        <form method="post" asp-page-handler="Verify">
            <div class="mb-3">
                <label class="form-label">Enter OTP Code</label>
                <input asp-for="OTP" type="text" class="form-control text-center fw-bold fs-5" maxlength="6"
                       placeholder="••••••" required />
            </div>

            <button type="submit" class="btn btn-success w-100 rounded-pill py-2">Verify</button>

            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <div class="alert alert-info mt-3 text-center">@Model.Message</div>
            }
        </form>


        <div class="text-center mt-3">
            <a asp-page="/ForgotPassword/ForgotPassword" class="text-decoration-none">← Back to Forgot Password</a>
        </div>
        <form method="post" asp-page-handler="Resend" class="text-center mt-3">
            <button type="submit" class="btn btn-link">Resend OTP</button>
        </form>

    </div>
</div>
