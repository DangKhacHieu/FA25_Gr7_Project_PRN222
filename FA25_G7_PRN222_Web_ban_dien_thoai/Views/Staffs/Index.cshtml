@model IEnumerable<DAL.Models.Staff>
@{
    ViewData["Title"] = "Index";
}

<style>
    .staff-container {
        max-width: 1400px;
        margin: 40px auto;
        padding: 30px;
        background: linear-gradient(145deg, #ffffff, #f8fafc);
        border-radius: 24px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    }

        .staff-container h1 {
            color: #4f46e5;
            margin-bottom: 30px;
            font-size: 2.25em;
            font-weight: 700;
            text-align: center;
            letter-spacing: -0.025em;
            background: linear-gradient(to right, #4f46e5, #7c3aed);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .staff-container > p {
            margin-bottom: 25px;
            text-align: right;
        }

            .staff-container > p a {
                background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
                color: white;
                padding: 12px 32px;
                text-decoration: none;
                border-radius: 50px;
                font-weight: 600;
                font-size: 0.95em;
                transition: all 0.3s ease;
                box-shadow: 0 4px 15px rgba(79, 70, 229, 0.3);
                display: inline-block;
            }

                .staff-container > p a:hover {
                    transform: translateY(-3px);
                    box-shadow: 0 8px 25px rgba(79, 70, 229, 0.5);
                    background: linear-gradient(135deg, #6b7280, #4f46e5);
                }

    .table-wrapper {
        overflow-x: auto;
        border-radius: 16px;
        background: #ffffff;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.05);
    }

    .staff-container .table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        background: #ffffff;
        margin-bottom: 0;
    }

        .staff-container .table thead {
            background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
            color: white;
            border-radius: 16px 16px 0 0;
        }

            .staff-container .table thead th {
                padding: 16px 12px;
                text-align: left;
                font-weight: 600;
                font-size: 0.85em;
                text-transform: uppercase;
                letter-spacing: 0.05em;
                border: none;
                position: relative;
            }

                .staff-container .table thead th:first-child {
                    border-top-left-radius: 16px;
                }

                .staff-container .table thead th:last-child {
                    border-top-right-radius: 16px;
                }

        .staff-container .table tbody tr {
            background: #ffffff;
            transition: all 0.2s ease;
            border-bottom: 1px solid #f1f5f9;
        }

            .staff-container .table tbody tr:hover {
                background: linear-gradient(90deg, rgba(79, 70, 229, 0.05) 0%, rgba(124, 58, 237, 0.05) 100%);
                transform: translateX(4px);
            }

        .staff-container .table tbody td {
            padding: 14px 12px;
            font-size: 0.9em;
            color: #1f2937;
            border: none;
        }

        .staff-container .table tbody tr:last-child {
            border-bottom: none;
        }

        .staff-container .table tbody td:last-child {
            white-space: nowrap;
            display: flex;
            gap: 10px;
            align-items: center;
            flex-wrap: wrap;
        }

        .staff-container .table tbody td .btn-edit,
        .staff-container .table tbody td .btn-details {
            color: white;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            padding: 8px 18px;
            border-radius: 8px;
            font-size: 0.85em;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
        }

        .staff-container .table tbody td .btn-edit {
            background: linear-gradient(135deg, #3b82f6 0%, #60a5fa 100%);
        }

            .staff-container .table tbody td .btn-edit:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 15px rgba(59, 130, 246, 0.4);
                background: linear-gradient(135deg, #2563eb 0%, #3b82f6 100%);
            }

        .staff-container .table tbody td .btn-details {
            background: linear-gradient(135deg, #10b981 0%, #34d399 100%);
        }

            .staff-container .table tbody td .btn-details:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 15px rgba(16, 185, 129, 0.4);
                background: linear-gradient(135deg, #059669 0%, #10b981 100%);
            }

    .staff-container .btn-danger {
        background: linear-gradient(135deg, #ef4444 0%, #f87171 100%);
        color: white;
        border: none;
        padding: 8px 18px;
        border-radius: 8px;
        cursor: pointer;
        font-weight: 600;
        font-size: 0.85em;
        transition: all 0.3s ease;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
    }

        .staff-container .btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(239, 68, 68, 0.4);
            background: linear-gradient(135deg, #dc2626 0%, #ef4444 100%);
        }

    .staff-container .table tbody td form {
        margin: 0;
    }

    @@media (max-width: 1200px) {
        .staff-container .table

    {
        font-size: 0.85em;
    }

    .staff-container .table thead th,
    .staff-container .table tbody td {
        padding: 12px 10px;
    }

        .staff-container .table tbody td .btn-edit,
        .staff-container .table tbody td .btn-details,
        .staff-container .btn-danger {
            padding: 7px 14px;
            font-size: 0.8em;
        }

    }

    @@media (max-width: 768px) {
        .staff-container

    {
        padding: 20px;
        margin: 20px;
    }

    .staff-container h1 {
        font-size: 1.75em;
    }

    .staff-container .table thead th,
    .staff-container .table tbody td {
        padding: 10px 8px;
        font-size: 0.8em;
    }

    .staff-container > p a {
        padding: 10px 24px;
        font-size: 0.9em;
    }

    }

    @@media (max-width: 576px) {
        .staff-container

    {
        padding: 15px;
        margin: 10px;
    }

    .staff-container h1 {
        font-size: 1.5em;
    }

    .staff-container .table tbody td:last-child {
        flex-direction: column;
        align-items: flex-start;
        gap: 6px;
    }

    }
</style>

<div class="staff-container">
    <h1>Manager Staff</h1>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <div class="table-wrapper">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FullName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CCCD)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Province_City)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DOB)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Sex)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CCCD)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Province_City)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DOB)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sex)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.StaffID" class="btn-edit">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.StaffID" class="btn-details">Details</a>
                            <form asp-action="Delete" asp-route-id="@item.StaffID" method="post" style="display:inline"
                                  onsubmit="return confirm('Bạn có chắc chắn muốn xóa nhân viên này không?');">
                                <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>