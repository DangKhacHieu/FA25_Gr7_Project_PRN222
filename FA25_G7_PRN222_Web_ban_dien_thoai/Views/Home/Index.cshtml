@{
    ViewData["Title"] = "Dashboard Quản lý";
    // Giả định bạn đã đăng ký thư viện Bootstrap Icons (bi)
}

<style>
    /* CSS Tùy chỉnh để đồng bộ với style của bạn */
    .kpi-card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .kpi-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
        }

    .kpi-icon-wrapper {
        background: rgba(255, 212, 0, 0.1); /* Dùng màu vàng chủ đạo với độ trong suốt */
        padding: 15px;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 60px;
        height: 60px;
        color: #FFD400; /* Icon màu vàng đậm */
    }

    .metric-value {
        font-size: 2rem;
        font-weight: 700;
        color: #1a1f3a;
    }

    .metric-title {
        color: #6c757d;
        font-weight: 500;
    }

    .gradient-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 15px;
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
        font-weight: 600;
    }
</style>

<div class="container mt-5">

    <div class="page-header d-flex justify-content-between align-items-center mb-4">
        <h1 class="page-title display-6 fw-bold">Tổng quan Dashboard</h1>
        <p class="text-muted">Cập nhật lúc: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</p>
    </div>

    <div class="row mb-5">

        @* Card 1: Tổng Doanh thu *@
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card kpi-card">
                <div class="card-body d-flex align-items-center">
                    <div class="me-4">
                        <div class="kpi-icon-wrapper" style="color: #667eea;">
                            <i class="bi bi-wallet2 fs-4"></i>
                        </div>
                    </div>
                    <div>
                        <div class="metric-title">Doanh thu (Tháng)</div>
                        <div class="metric-value">125.000.000₫</div>
                    </div>
                </div>
            </div>
        </div>

        @* Card 2: Đơn hàng mới *@
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card kpi-card">
                <div class="card-body d-flex align-items-center">
                    <div class="me-4">
                        <div class="kpi-icon-wrapper" style="color: #764ba2;">
                            <i class="bi bi-cart3 fs-4"></i>
                        </div>
                    </div>
                    <div>
                        <div class="metric-title">Đơn hàng mới</div>
                        <div class="metric-value">45</div>
                    </div>
                </div>
            </div>
        </div>

        @* Card 3: Sản phẩm trong kho *@
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card kpi-card">
                <div class="card-body d-flex align-items-center">
                    <div class="me-4">
                        <div class="kpi-icon-wrapper" style="color: #155724;">
                            <i class="bi bi-box-seam fs-4"></i>
                        </div>
                    </div>
                    <div>
                        <div class="metric-title">Tổng Tồn kho</div>
                        <div class="metric-value">980</div>
                    </div>
                </div>
            </div>
        </div>

        @* Card 4: Khách hàng mới *@
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card kpi-card">
                <div class="card-body d-flex align-items-center">
                    <div class="me-4">
                        <div class="kpi-icon-wrapper" style="color: #FFD400;">
                            <i class="bi bi-people fs-4"></i>
                        </div>
                    </div>
                    <div>
                        <div class="metric-title">Khách hàng mới</div>
                        <div class="metric-value">12</div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="gradient-header">
                    Đơn hàng mới nhất (5 đơn)
                </div>
                <div class="card-body p-0">
                    <table class="table table-striped table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Mã ĐH</th>
                                <th>Khách hàng</th>
                                <th>Tổng tiền</th>
                                <th>Trạng thái</th>
                                <th>Ngày đặt</th>
                            </tr>
                        </thead>
                        <tbody>
                            @* Đây là ví dụ dữ liệu tĩnh, bạn sẽ thay thế bằng Model *@
                            <tr>
                                <td>#1001</td>
                                <td>Nguyễn Văn A</td>
                                <td>15,990,000₫</td>
                                <td><span class="badge bg-warning text-dark">Pending</span></td>
                                <td>11/11/2025</td>
                            </tr>
                            <tr>
                                <td>#1002</td>
                                <td>Trần Thị B</td>
                                <td>8,500,000₫</td>
                                <td><span class="badge bg-info text-dark">Shipping</span></td>
                                <td>10/11/2025</td>
                            </tr>
                            <tr>
                                <td>#1003</td>
                                <td>Lê Hoàng C</td>
                                <td>24,300,000₫</td>
                                <td><span class="badge bg-success">Completed</span></td>
                                <td>09/11/2025</td>
                            </tr>
                            <tr>
                                <td>#1004</td>
                                <td>Phạm Minh D</td>
                                <td>4,000,000₫</td>
                                <td><span class="badge bg-danger">Failed</span></td>
                                <td>09/11/2025</td>
                            </tr>
                            <tr>
                                <td>#1005</td>
                                <td>Võ Tấn E</td>
                                <td>12,900,000₫</td>
                                <td><span class="badge bg-warning text-dark">Pending</span></td>
                                <td>08/11/2025</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>