@model IEnumerable<DAL.Models.Customer>

@{
    ViewData["Title"] = "Customer List";
}

<div class="d-flex" style="min-height:100vh;">
    <!-- Sidebar -->
    <div class="bg-dark text-white p-3" style="width:20%;">
        <h3 class="text-center mb-4">INFINITY DREAM</h3>
        <ul class="nav flex-column">
            <li class="nav-item mb-2">
                <a class="nav-link text-white" href="#"><i class="bi bi-house"></i> Dashboard</a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link text-white" href="#"><i class="bi bi-people"></i> Customers</a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link text-white" href="#"><i class="bi bi-box-seam"></i> Products</a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link text-white" href="#"><i class="bi bi-gear"></i> Settings</a>
            </li>
        </ul>
    </div>

    <!-- Nội dung chính -->
    <div class="p-4" style="width:80%;">
        <h1 class="mb-4">Customer List</h1>

        <!-- Thanh search -->
        <div class="mb-3">
            <input type="text" id="searchBox" class="form-control" placeholder="Search Customer..." />
        </div>

        <p>
            <a asp-action="Create" class="btn btn-primary mb-3">
                <i class="bi bi-plus-circle"></i> Create New
            </a>
        </p>

        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr class="text-center">
                    <th>Tên khách hàng</th>
                    <th>Điện thoại</th>
                    <th>Địa chỉ</th>
                    <th>Giới tính</th>
                    <th>Trạng thái</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody id="customerTableBody">
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <!-- Avatar + Name -->
                        <td class="text-start">
                            <div class="d-flex align-items-center">
                                <img src="~/images/avatar.png" class="rounded-circle me-2" style="width:50px; height:50px;" alt="avatar" />
                                <span>@item.FullName</span>
                            </div>
                        </td>

                        <td>@item.PhoneNumber</td>
                        <td>@item.Address</td>
                        <td>@item.Sex</td>

                        <!-- Status -->
                        <td>
                            @if (item.Status == 0)
                            {
                                <span class="badge bg-success">Đang hoạt động</span>
                            }
                            else if (item.Status == 1)
                            {
                                <span class="badge bg-danger">Blocked</span>
                            }
                            else if (item.Status == -1)
                            {
                                <span class="badge bg-secondary">Deleted</span>
                            }
                        </td>

                        <!-- Hành động -->
                        <td>
                            @if (item.Status == 1)
                            {
                                <a asp-action="ToggleStatus" asp-route-id="@item.CustomerId" class="btn btn-sm btn-danger mb-1" title="Blocked → Unblock">
                                    <i class="bi bi-person-x-fill"></i>
                                </a>
                            }
                            else
                            {
                                <a asp-action="ToggleStatus" asp-route-id="@item.CustomerId" class="btn btn-sm btn-success mb-1" title="Active → Block">
                                    <i class="bi bi-person-check-fill"></i>
                                </a>
                            }

                            <br />

                            <a asp-action="Details" asp-route-id="@item.CustomerId" class="btn btn-sm btn-info mb-1" title="Details">
                                <i class="bi bi-eye-fill"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.CustomerId" class="btn btn-sm btn-warning mb-1" title="Delete">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>

    <script>
        $(function(){
            $("#searchBox").autocomplete({
                source: function(request, response) {
                    $.ajax({
                        url: '@Url.Action("SuggestCustomer", "Customers")',
                        data: { term: request.term },
                        success: function(data) {
                            response(data); // danh sách gợi ý
                        }
                    });
                },
                minLength: 1,
                select: function(event, ui) {
                    // Khi chọn gợi ý → load kết quả chính xác vào table
                    $.ajax({
                        url: '@Url.Action("Index", "Customers")',
                        data: { searchString: ui.item.value },
                        success: function(html) {
                            $("#customerTableBody").html($(html).find("#customerTableBody").html());
                        }
                    });
                }
            });
        });
    </script>
}
