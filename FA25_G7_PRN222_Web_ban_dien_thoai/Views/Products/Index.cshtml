@model DAL.Models.PagedResult<System.Object>

@{
    ViewData["Title"] = "Quản lý Sản phẩm";
    var pagedProducts = Model.Items.Cast<DAL.Models.Product>();
}

<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteConfirmationModalLabel">Xác nhận xóa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Bạn có chắc chắn muốn xóa sản phẩm "<span id="productNameToDelete"></span>" không?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <form asp-action="DeleteConfirmed" method="post" id="deleteForm">
                    <input type="hidden" name="id" id="deleteId" />
                    <button type="submit" class="btn btn-danger">Xác nhận</button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    /* CSS giữ nguyên */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
    }

    .page-title {
        font-size: 24px;
        font-weight: 700;
        color: #1a1f3a;
        margin: 0;
    }

    .btn-create {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 10px 20px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
    }

        .btn-create:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
            color: white;
        }

    .search-bar {
        margin-bottom: 20px;
    }

        .search-bar input {
            width: 100%;
            max-width: 400px;
            padding: 10px 15px;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 14px;
        }

            .search-bar input:focus {
                outline: none;
                border-color: #667eea;
            }

    .products-table {
        background: white;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

        .products-table table {
            width: 100%;
            margin: 0;
        }

        .products-table thead {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .products-table th {
            color: white;
            font-weight: 600;
            font-size: 13px;
            padding: 15px;
            border: none;
            text-align: left;
        }

        .products-table td {
            padding: 15px;
            border-bottom: 1px solid #f0f0f0;
            color: #495057;
            font-size: 14px;
        }

        .products-table tbody tr:hover {
            background: #f8f9ff;
        }

    .product-name {
        font-weight: 600;
        color: #1a1f3a;
    }

    .price {
        color: #667eea;
        font-weight: 600;
    }

    .badge {
        padding: 4px 10px;
        border-radius: 5px;
        font-size: 12px;
        font-weight: 600;
    }

    .badge-success {
        background: #d4edda;
        color: #155724;
    }

    .badge-danger {
        background: #f8d7da;
        color: #721c24;
    }

    .action-buttons {
        display: flex;
        gap: 10px;
    }

    .btn-action {
        padding: 6px 12px;
        border-radius: 6px;
        text-decoration: none;
        font-size: 13px;
        transition: all 0.2s ease;
    }

    .btn-edit {
        background: #e3f2fd;
        color: #1976d2;
    }

        .btn-edit:hover {
            background: #1976d2;
            color: white;
        }

    .btn-details {
        background: #f3e5f5;
        color: #7b1fa2;
    }

        .btn-details:hover {
            background: #7b1fa2;
            color: white;
        }

    .btn-delete {
        background: #ffebee;
        color: #c62828;
    }

        .btn-delete:hover {
            background: #c62828;
            color: white;
        }
</style>

<div class="page-header">
    <h1 class="page-title">Quản lý Sản phẩm</h1>
    <a asp-action="Create" class="btn-create">
        <i class="bi bi-plus-circle"></i> Thêm sản phẩm
    </a>
</div>

<partial name="_StatusMessage" />

<div class="search-bar">
    <input type="text" id="searchInput" placeholder="Tìm kiếm sản phẩm..." />
</div>

<div class="products-table">
    <table class="table">
        <thead>
            <tr>
                <th>Tên sản phẩm</th>
                <th>Thương hiệu</th>
                <th>RAM</th>
                <th>Bộ nhớ trong</th>
                <th>Màu sắc</th>
                <th>Hệ điều hành</th>
                <th>Kích thước màn hình</th>
                <th>Độ phân giải</th>
                <th>Giá</th>
                <th>Số lượng còn</th>
                <th>Số lượng bán</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in pagedProducts)
            {
                <tr>
                    <td>
                        <span class="product-name">@item.ProductName</span>
                    </td>
                    <td>@item.Brand</td>
                    <td>@item.Ram GB</td>
                    <td>@item.Rom GB</td>
                    <td>@item.Color</td>
                    <td>@item.Chip_name</td>
                    <td>@item.Size</td>
                    <td>@item.Screen_resolution</td>
                    <td>
                        <span class="price">@(item.Price.HasValue? item.Price.Value.ToString("N0") : "0") ₫</span>
                    </td>
                    <td>@item.Quantity_Product</td>
                    <td>@item.Quantity_Sell</td>
                    <td>
                        <div class="action-buttons">
                            <a asp-action="Edit" asp-route-id="@item.ProductID" class="btn-action btn-edit">Sửa</a>
                            <a asp-action="Details" asp-route-id="@item.ProductID" class="btn-action btn-details">Xem</a>
                            <a href="#" class="btn-action btn-delete" onclick="confirmDelete('@item.ProductID', '@item.ProductName')">Xóa</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<partial name="_Pagination" model="Model" />

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // Hàm hiển thị popup xác nhận xóa
    function confirmDelete(productId, productName) {
        document.getElementById('productNameToDelete').textContent = productName;
        document.getElementById('deleteId').value = productId;
        var deleteModal = new bootstrap.Modal(document.getElementById('deleteConfirmationModal'));
        deleteModal.show();
    }

    // ĐÃ XÓA LOGIC JS KÍCH HOẠT POPUP THÔNG BÁO THÀNH CÔNG Ở ĐÂY.
    // Viêc hiển thị thông báo giờ do _StatusMessage.cshtml đảm nhận.

</script>