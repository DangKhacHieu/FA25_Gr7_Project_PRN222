@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "Home";
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString() ?? "Index";
    var staffUsername = Context.Session.GetString("StaffUsername") ?? "Người dùng";
    var staffIdInt = Context.Session.GetInt32("StaffId");
    var isAdmin = staffIdInt.HasValue && staffIdInt.Value == 1;

    string GetActiveClass(string controller, string action = null)
    {
        if (!string.IsNullOrEmpty(action))
        {
            if (string.Equals(controller, currentController, StringComparison.OrdinalIgnoreCase) &&
                string.Equals(action, currentAction, StringComparison.OrdinalIgnoreCase))
            {
                return "active";
            }
        }
        else if (string.Equals(controller, currentController, StringComparison.OrdinalIgnoreCase))
        {
            return "active";
        }
        return "";
    }
}
