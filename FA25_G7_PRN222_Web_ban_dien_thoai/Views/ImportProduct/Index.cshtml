<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên sản phẩm</th>
            <th>Brand</th>
            <th>Số lượng còn</th>
            <th>Giá</th>
            <th>RAM</th>
            <th>ROM</th>
            <th>Màu</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.ProductName</td>
                <td>@p.Brand</td>
                <td>@p.Quantity_Product</td>
                <td>@p.Price?.ToString("C")</td>
                <td>@p.Ram</td>
                <td>@p.Rom</td>
                <td>@p.Color</td>
                <td>
                    <a asp-action="ManualImport" asp-route-id="@p.ProductID" class="btn btn-warning btn-sm">Sửa / Nhập</a>
                </td>
            </tr>
        }
    </tbody>
</table>
